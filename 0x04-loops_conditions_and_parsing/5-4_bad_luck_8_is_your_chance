#!/usr/bin/env bash
#Displays "Best School" but
#on the 4th iteration displays "bad luck"
#on the 8th iteration displays "good luck"

i=1
msg="Best School"

while [ $i -le 10 ]
do
	if [ $i == 8 ]
	then	
		echo "good luck"	
	elif [ $i == 4 ]
	then
		echo "bad luck"
	else
		echo "$msg"
	fi

	(( i++ ))
done
